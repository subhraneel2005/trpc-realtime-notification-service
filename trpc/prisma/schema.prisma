generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  username String
  pfp      String @default("https://cdn.pfps.gg/pfps/51247-mr-penis.jpeg")
  posts    Post[]
}

model Post {
  id      String  @id @default(uuid())
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
  content String
  likes   Likes[]
}

model Likes {
  id         String  @id @default(cuid())
  post       Post?   @relation(fields: [postId], references: [id])
  postId     String?
  likesCount Int     @default(0)
}
